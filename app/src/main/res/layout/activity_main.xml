<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dennyschuldt.colors.MainActivity">
    <HorizontalScrollView
        android:id="@+id/main.color.pallete.container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/main.color.pallete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:id="@+id/main.separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main.color.pallete.container"
        android:background="@color/color.grey"/>
    <ScrollView
        android:layout_below="@+id/main.separator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/main.color.variations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
