<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corners">

    <RelativeLayout
        android:id="@+id/palettes.fragment.header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color.grey"
        android:paddingTop="40dp"
        android:paddingBottom="40dp">
        <ImageView
            android:id="@+id/palettes.fragment.header.icon.left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_left_white"/>
        <ImageView
            android:id="@+id/palettes.fragment.header.icon.center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_color_lens_white"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/palettes.fragment.body"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>